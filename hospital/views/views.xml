<odoo>
    <data>
        <record model="ir.ui.view" id="hospital_patient_tree_view">
            <field name="name">hospital.patient.tree.view</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <tree string="Patients">
                    <field name="patient_name"/>
                    <field name="patient_age"/>
                    <field name="notes"/>
                    <!-- show in the table do not need to put all the fields-->
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="hospital_patient_form_view">
            <field name="name">hospital.patient.form.view</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form string="hospital_patient">
                    <group>
                        <field name="patient_name"/>
                        <field name="patient_age"/>
                        <field name="notes"/>
<!--                        <field name="image"/>-->
                    </group>
                </form>
            </field>
        </record>

        <record id="action_patient" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree, form</field>
            <field name="view_id" ref="hospital_patient_tree_view"/>
            <field name="view_id" ref="hospital_patient_form_view"/>
            <field name="help" type="html">
                <p>
                    Create your patient!
                </p>
            </field>
        </record>
        <menuitem id="menu_hospital_root" name="Hospital"/>
        <menuitem id="menu_hospital_patients" name="Patients" parent="menu_hospital_root" action="action_patient"/>
    </data>

</odoo>